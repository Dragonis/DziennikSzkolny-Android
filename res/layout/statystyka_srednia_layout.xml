<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zamknij"
            android:id="@+id/zamknij_srednia"
            android:layout_below="@+id/oblicz_srednia_textview" android:layout_alignLeft="@+id/oblicz_srednia_textview"
            android:layout_alignStart="@+id/oblicz_srednia_textview" android:layout_marginTop="49dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="[Imie i Nazwisko]"
            android:id="@+id/textView10"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Srednia:"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="[srednia]"
            android:id="@+id/oblicz_srednia_textview"
            android:layout_below="@+id/textView11" android:layout_centerHorizontal="true"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:id="@+id/tabelka_z_ocenami" android:layout_above="@+id/textView10" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/radioButton"
            android:layout_below="@+id/oblicz_srednia_textview" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>
