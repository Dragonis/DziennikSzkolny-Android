<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:background="@drawable/images">

<HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
        >

        <!--Wykres 1 -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/glowne_okno">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Srednia ocen na liczbe uczniow"
                    android:id="@+id/qqqw" android:layout_gravity="center_horizontal"
                    android:layout_toEndOf="@+id/zzzyubl" android:layout_above="@+id/Zamknij_Statystyki"
                    android:layout_alignParentStart="true"/>

            <!-- 1 wykres -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="400dp"
                  android:fillViewport="true"
                  android:id="@+id/layout"
            />

            <!-- 2 wykres -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="400dp"
                  android:fillViewport="true"
                  android:id="@+id/layout2"
            />


            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zamknij"
                    android:id="@+id/Zamknij_Statystyki"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/textView" android:layout_gravity="center_horizontal"
                    android:layout_toEndOf="@+id/layout" android:layout_above="@+id/Zamknij_Statystyki"
                    android:layout_alignParentStart="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Temp2"
                    android:id="@+id/yyyy" android:layout_gravity="center_horizontal"
                    android:layout_toEndOf="@+id/zzzz"
                    android:layout_alignParentBottom="true" android:layout_marginLeft="35dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Temp1"
                    android:id="@+id/zzzz" android:layout_gravity="center_horizontal"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_alignParentBottom="true"/>

        </LinearLayout>
</HorizontalScrollView>
</ScrollView>
