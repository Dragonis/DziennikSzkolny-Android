<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:minHeight="300dp">
        <LinearLayout android:orientation="vertical" android:layout_width="100dp" android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Lista klas w szkole podstawowej:"
                    android:id="@+id/textView"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Klasa 1"
                    android:id="@+id/klasa1"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Klasa 2"
                    android:id="@+id/klasa2"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Klasa 3"
                    android:id="@+id/klasa3"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Klasa 4"
                    android:id="@+id/klasa4"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Klasa 5"
                    android:id="@+id/klasa5"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Klasa 6"
                    android:id="@+id/klasa6"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="100dp"
                      android:layout_height="wrap_content">
            <ListView android:layout_width="match_parent" android:layout_height="400dp" android:id="@+id/listView"/>
        </LinearLayout>
        <ListView android:layout_width="wrap_content" android:layout_height="382dp" android:id="@+id/listView0"
                />


    </LinearLayout>
  <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
      <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edytuj"
                android:id="@+id/usunucznia_button_listaklas"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wyjdz"
                android:id="@+id/Wyjdz_button" android:layout_gravity="center_horizontal"/>
      <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Zamknij"
              android:id="@+id/dodajucznia_button_listaklas"/>
      <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dodaj"
                android:id="@+id/edytujucznia_button_listaklas"/>

  </TableRow>


</LinearLayout>