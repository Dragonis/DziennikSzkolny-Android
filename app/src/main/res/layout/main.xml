<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@mipmap/images">
    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

        <TableLayout android:id="@+id/app_name"
                     xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:orientation="vertical"
                     android:baselineAligned="false">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="JesteÅ› zalogowany/a jako:"
                    android:id="@+id/textView37" android:layout_column="0"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="[Imie Nazwisko]"
                    android:id="@+id/textviewImieiNazwisko" android:layout_column="0"/>
            <TableRow android:id="@+id/tableRow1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dip">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ListaKlas_Button" android:layout_row="0" android:layout_column="0"
                        android:drawableBottom="@mipmap/lista"
                        android:text="@string/lista_klas" android:clickable="true"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ZobaczStatyButton" android:layout_row="0" android:layout_column="1"
                        android:drawableBottom="@mipmap/wykres"
                        android:text="@string/Zob_Statyst" android:clickable="true"/>
            </TableRow>

            <TableRow android:id="@+id/tableRow1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dip">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/OpcjeButton"
                        android:drawableBottom="@mipmap/zebatka"
                        android:text="@string/Opcje" android:clickable="true"
                        android:layout_column="0"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/UczniowieButton" android:layout_row="0" android:layout_column="1"
                        android:drawableBottom="@mipmap/user"
                        android:text="O Autorze"/>
            </TableRow>

            <TableRow android:id="@+id/tableRow1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dip">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wyloguj_button" android:layout_row="0" android:layout_column="0"
                        android:drawableBottom="@mipmap/zamknij"
                        android:text="Wyloguj" android:clickable="true"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
            </TableRow>

        </TableLayout>
    </HorizontalScrollView>
</ScrollView>