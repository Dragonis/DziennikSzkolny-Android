<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID_Ucznia: "
            android:id="@+id/textView15"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView16" android:layout_gravity="center_horizontal"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Imie"
              android:id="@+id/textView14"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/imie_edittext_edytujucznia"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Nazwisko"
              android:id="@+id/textView14"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/nazwisko_edittext_edytujucznia"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Klasa"
              android:id="@+id/textView14"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/klasa_edittext_edytujucznia"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Zapisz"
            android:id="@+id/zapisz_button_edytujucznia" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zamknij"
            android:id="@+id/zamknij_button_edytujucznia" android:layout_gravity="center_horizontal"/>
</LinearLayout>